#!/usr/bin/env python3
import sys, importlib.util
from pathlib import Path

repo_root = Path(__file__).resolve().parents[1]
if str(repo_root) not in sys.path:
    sys.path.insert(0, str(repo_root))

try:
    from extensions.providers.runner import main  # type: ignore
except Exception:
    # Fallback: load by absolute path in case of path/package conflicts
    rpath = repo_root / "extensions/providers/runner.py"
    spec = importlib.util.spec_from_file_location("extensions.providers.runner", rpath)
    if not spec or not spec.loader:  # type: ignore
        raise
    mod = importlib.util.module_from_spec(spec)  # type: ignore
    spec.loader.exec_module(mod)  # type: ignore
    main = mod.main  # type: ignore

if __name__ == "__main__":
    sys.exit(main(sys.argv[1:]))
