#!/usr/bin/env bash
set -euo pipefail
if git diff --cached --name-only | grep -q '^governance/anchors.json$'; then
  if [ -x scripts/ci/check_anchors_guard.py ]; then
    scripts/ci/check_anchors_guard.py
  fi
fi

# Queue item structure (only when queue/*.md is staged)
if git diff --cached --name-only | grep -q '^queue/.*\.md$'; then
  scripts/ci/check_queue_template.py
fi
