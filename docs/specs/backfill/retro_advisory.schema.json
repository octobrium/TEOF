{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TEOF Retro Advisory",
  "type": "object",
  "required": [
    "id",
    "source_receipt",
    "targets",
    "claim",
    "evidence",
    "layer",
    "systemic_targets",
    "layer_targets"
  ],
  "properties": {
    "id": {"type": "string", "pattern": "^ADV-[0-9A-Za-z_-]+$"},
    "created": {"type": "string", "format": "date-time"},
    "source_receipt": {"type": "string"},
    "layer": {"type": "string", "pattern": "^L[0-6]$"},
    "systemic_scale": {"type": "integer", "minimum": 1, "maximum": 10},
    "systemic_targets": {
      "type": "array",
      "items": {"type": "string", "pattern": "^S(10|[1-9])$"},
      "minItems": 1
    },
    "layer_targets": {
      "type": "array",
      "items": {"type": "string", "pattern": "^L[0-6]$"},
      "minItems": 1
    },
    "targets": {
      "type": "array",
      "items": {"type": "string"},
      "minItems": 1
    },
    "claim": {"type": "string", "minLength": 1},
    "evidence": {
      "type": "object",
      "required": ["receipts"],
      "properties": {
        "receipts": {
          "type": "array",
          "items": {"type": "string"},
          "minItems": 1
        },
        "metrics": {"type": "object"},
        "notes": {"type": "string"}
      }
    },
    "severity": {
      "type": "string",
      "enum": ["low", "medium", "high"],
      "default": "medium"
    },
    "notes": {"type": "string"}
  },
  "additionalProperties": false
}
