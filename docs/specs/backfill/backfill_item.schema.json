{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TEOF Backfill Work Item",
  "type": "object",
  "required": [
    "id",
    "advisory_id",
    "plan_id",
    "acceptance",
    "budget",
    "status"
  ],
  "properties": {
    "id": {"type": "string", "pattern": "^BF-[0-9A-Za-z_-]+$"},
    "created": {"type": "string", "format": "date-time"},
    "advisory_id": {"type": "string"},
    "plan_id": {"type": "string"},
    "links": {
      "type": "array",
      "items": {"type": "string"}
    },
    "acceptance": {
      "type": "array",
      "items": {"type": "string"},
      "minItems": 1
    },
    "budget": {
      "type": "object",
      "required": ["tokens", "wallclock_min"],
      "properties": {
        "tokens": {"type": "integer", "minimum": 0},
        "wallclock_min": {"type": "integer", "minimum": 0}
      }
    },
    "status": {
      "type": "string",
      "enum": ["queued", "in_progress", "review", "merged", "apoptosed"],
      "default": "queued"
    },
    "receipts": {
      "type": "array",
      "items": {"type": "string"}
    },
    "notes": {"type": "string"}
  },
  "additionalProperties": false
}
